APP_PORT=                                        # Port exposed by the Spring Boot application (e.g., 8080)
DB_HOST=                                         # PostgreSQL host (e.g., localhost or Docker service name)
DB_PORT=                                         # PostgreSQL port (default: 5432)
DB_NAME=                                         # PostgreSQL database name
DB_USER=                                         # PostgreSQL username
DB_PASSWORD=                                     # PostgreSQL password
JWT_PUBLIC_KEY_PATH=                             # Absolute path to RSA public key (PEM, used to verify JWTs)
JWT_PRIVATE_KEY_PATH=                            # Absolute path to RSA private key (PEM, PKCS#8, used to sign JWTs)
